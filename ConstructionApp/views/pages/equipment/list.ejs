<%- include('../../fragments/header.ejs') %>

<main>
    <h2><%= __('equipment.list.pageTitle') %></h2>
    <table class="table-list">
        <thead>
        <tr>
            <th><%= __('equipment.fields.Nazwa') %></th>
            <th><%= __('equipment.fields.SprzetCiezki') %></th>
            <th><%= __('list.actions.title') %></th>
        </tr>
        </thead>

        <tbody>
        <% for (let eq of equipments) { %>
            <tr>
                <td><%= eq.Nazwa %></td>
                <td><%= eq.SprzetCiezki === 1 ? 'tak' : 'nie' %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="equipments/details/<%= eq.Id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a></li>
                        <% if (admin) { %>
                        <li><a href="equipments/edit/<%= eq.Id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a></li>
                        <li><a href="equipments/delete/<%= eq.Id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a></li>
                        <% } %>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <% if (loggedUser || admin) { %>
    <p><a href="equipments/add" class="button-add"><%= __('equipment.list.addNew') %></a></p>
    <% } %>
</main>

<%- include('../../fragments/footer.ejs') %>