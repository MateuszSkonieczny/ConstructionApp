<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Nowa budowa</h2>
    <form class="form">
        <label for="fid">Firma: *</label>
        <select name="fid" id="fid">
            <option>--Wybierz firmę--</option>
            <option value="1">Budimex</option>
            <option value="2">Superbud</option>
        </select>
        <p></p>
        <label for="oid">Osiedle: *</label>
        <select name="oid" id="oid">
            <option>--Wybierz osiedle--</option>
            <option value="1">Aluzyjna 3</option>
            <option value="2">Nowa Warszawa 1</option>
        </select>
        <p></p>
        <label for="im">Imię managera: *</label>
        <input type="text" name="im" id="im" class="error-input" placeholder="2-60 znaków" required/>
        <span id="errorIM" class="errors-text">Pole jest wymagane</span>

        <label for="nm">Nazwisko man.: *</label>
        <input type="text" name="nm" id="nm" class="error-input" placeholder="2-60 znaków" required/>
        <span id="errorNM" class="errors-text">Pole jest wymagane</span>

        <label for="dz">Data zakończenia: *</label>
        <input type="date" name="dz" id="dz"/>
        <span id="errorDZ"></span>

        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text">Furmularz zawiera błędy</p>
            <input type="submit" class="form-button-submit" value="Dodaj" />
            <a href="list.ejs" class="form-button-cancel">Anuluj</a>
        </div>
    </form>
</main>

<%- include('../../fragments/footer.ejs') %>